{
    "require-dev": {
        "pestphp/pest": "^3.8",
        "symfony/var-dumper": "^7.3",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:unit": "pest --parallel",
        "test": [
            "@test:unit"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "ext-pdo": "*",
        "nikic/fast-route": "^1.3",
        "league/container": "^5.1",
    }
}
